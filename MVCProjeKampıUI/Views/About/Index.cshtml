
@model List<About>

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1"
        >Yeni Hakkımızda Yazı Girişi</button>
<partial name="_AboutPartial" model="@Model"/>


<table>
    <thead>
        <tr>
            <th style="width:10%;">#</th>
            <th style="width:50%;">Başlık</th>
            <th style="width:20%;">Aktif Yap</th>
            <th style="width:20%;">Pasif Yap</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AboutId</td>
                <td>Başlık</td>
                <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
                <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>

            </tr>
        }
        </tbody>
</table>
