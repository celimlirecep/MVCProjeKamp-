
    @model Heading

    @{
        ViewData["Title"] = "AddCategory";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

<form asp-action="EditHeading" class="form-group">
    <input type="hidden" asp-for="HeadingId" value="@Model.HeadingId" />
    <label class="col-form-label-sm"> Başlık Adı:</label>
    <input type="text" class="form-text" asp-for="HeadingName" />
    <span asp-validation-for="HeadingName" class="text-danger"></span>
    <br />



    <label class="col-form-label-sm"> Yazar Adı:</label>
    <select type="text" class="form-text" asp-for="WriterId" asp-items="ViewBag.Writer"></select>
    <span asp-validation-for="WriterId"></span>
    <br />
    <label>Kategori Adı </label><br />
    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Category"></select>
    <br />
    <label>Heading Status: </label><br />
    <input type="checkbox" asp-for="HeadingStatus" />
    <br />



    <button class="btn btn-info" type="submit"> Başlık Oluştur</button>
</form>
